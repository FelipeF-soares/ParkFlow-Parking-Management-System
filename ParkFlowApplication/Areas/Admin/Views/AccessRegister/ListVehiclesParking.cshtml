@model List<EntryExitAccess>

<div class="container">
    <div class="card shadow">
        <div class="card-header">
            <h3>Lista de Veículos Estacionados</h3>
        </div>
        <div class="card-body">
        @if(Model.Count <= 0)
        {
            <h4 class="text-center">Não Existe Veículos Estacionados</h4>
        }
        else
        {   
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Placa</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Cor</th>
                    <th scope="col">Horário Entrada</th>
                    <th scope="col">Registrar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var park in @Model)
                {
                    <tr>
                        <th scope="row">@park.Vehicle.LicensePlate</th>
                        <td>@park.Vehicle.Brand</td>
                        <td>@park.Vehicle.Model</td>
                        <td>@park.Vehicle.Color</td>
                        <td>@park.EntryTime.ToString()</td>
                        <td><a asp-area="Admin" asp-controller="AccessRegister" asp-action="RegisterExit" asp-route-id="@park.Id" class="btn btn-danger btn-sm">Saída</a></td>
                    </tr>
                }
            </tbody>
        </table>
        }
        </div>
    </div>
</div>